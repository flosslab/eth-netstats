//- layout.jade
doctype html
html(ng-app="netStatsApp")
  head
    meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0")
    if settings.themeColor
      meta(name="theme-color", content="#{settings.themeColor}")
    title #{title}
    style(type="text/css") [ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak { display: none !important; }
    if settings.googleFontFamily
      link(rel='stylesheet', href='//fonts.googleapis.com/css?family=#{settings.googleFontFamily}:200,300,400,600,700')
    link(rel='stylesheet', href='/css/netstats.min.css')
    if settings.fontFamily
      style(type="text/css") body { font-family: "#{settings.fontFamily}", sans-serif; }
  body
    block content

    script(src="/js/netstats.min.js")